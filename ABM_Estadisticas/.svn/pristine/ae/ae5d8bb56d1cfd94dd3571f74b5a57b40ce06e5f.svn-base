 {% block forms %}
 

 {#AÑO
 
 #}
 
 
 {% form_theme agregarAnio _self %}
 
 <div id="agregarAnioDLG" title="Agregar Año">
 	{{ form_start(agregarAnio) }}
    {{ form_errors(agregarAnio) }}

   
  <div class='form-group'>
  			 {{ form_label(agregarAnio.anioId) }}
  			 <div {{ block('widget_container_attributes') }} class="col-sm-7" >
    		 	{{ form_widget(agregarAnio.anioId, {'attr': {'class':'form-control ui-selectmenu-button ui-widget ui-state-default ui-corner-all'} }) }}
    		 </div>
  </div>

  <div class='form-group'>
  			{{ form_label(agregarAnio.anioHabilitado) }}
  		<div {{ block('widget_container_attributes') }} class="col-sm-7">
				{% for child in agregarAnio.anioHabilitado %}
  				{{ form_label(child) }}
  				{{ form_widget(child, {'attr': {'name': 'inlineRadioOptions', 'id': 'inlineRadio' ~ loop.index }}) }}
  				
  			{% endfor %}
  		</div>
  </div>


  <div class='form-group'>
	<div {{ block('widget_container_attributes') }} class="col-sm-7">
		  {% for child in agregarAnio.anioOpciones %}
		     {{ form_widget(child) }}
			 {{ form_label(child) }}
		 	 
		  {% endfor %}
    </div>
    
    
    {%- block submit_widget -%}
    <br>
		<div class="ui-dialog-buttonpane ui-widget-content ui-helper-clearfix">
			<div class="ui-dialog-buttonset">
    			<button type="{{ type|default('submit') }}" class="btn ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only"  }}>
     	  		 <span class="ui-button-text">Confirmar</span>
 	   			</button>
 	   		</div>
 	   	</div>
	{%- endblock submit_widget -%}
    
    
  </div>
    	 
    
    {{ form_end(agregarAnio) }}
 </div>

 
 
  {#
 CAPITULO
 #}
 {% form_theme editarCapitulo _self %}
 
 <div id="editarCapituloDLG" title="Editar Capítulo">
 
 {{ form_start(editarCapitulo) }}
 {{ form_errors(editarCapitulo) }} 
 <div class='form-group'>
 	{{ form_label(editarCapitulo.capi_id) }}
 	<div {{ block('widget_container_attributes') }} class="col-sm-3" >
 	{{ form_widget(editarCapitulo.capi_id,{'attr': {'class':'form-control '} }) }}
 	</div>
 </div>
 
 <div class='form-group'>
 	{{ form_label(editarCapitulo.capi_detalle) }}
 	<div {{ block('widget_container_attributes') }} class="col-sm-10" >
 	{{ form_widget(editarCapitulo.capi_detalle,{'attr': {'class':'form-control '} }) }}
 	</div>
 </div>
 
  {%- block submit_widget_capit -%}
    <br>
		<div class="ui-dialog-buttonpane ui-widget-content ui-helper-clearfix">
			<div class="ui-dialog-buttonset">
    			<button type="{{ type|default('submit') }}" class="btn ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only"  }}>
     	  		 <span class="ui-button-text">Confirmar</span>
 	   			</button>
 	   			
 	   			<button id="eliminarCapitulo" class="btn ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only"  }}>
     	  		 <span class="ui-button-text">Eliminar</span>
 	   			</button>
 	   			
 	   			
 	   			<button id="cancelarCapitulo" class="btn ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only"  }}>
     	  		 <span class="ui-button-text">Cancelar</span>
 	   			</button>
 	   		</div>
 	   	</div>
  {%- endblock submit_widget_capit -%}
 	{{ form_end(editarCapitulo) }}
 </div>
 
  {% form_theme agregarCapitulo _self %}
 <div id="agregarCapituloDLG" title="Agregar Capítulo">
 
 {{ form_start(agregarCapitulo) }}
 {{ form_errors(agregarCapitulo) }} 
 <div class='form-group'>
 	{{ form_label(agregarCapitulo.capi_id) }}
 	<div {{ block('widget_container_attributes') }} class="col-sm-3" >
 	{{ form_widget(agregarCapitulo.capi_id,{'attr': {'class':'form-control '} ,'id':'idAgregar'}) }}
 	</div>
 </div>
 
 <div class='form-group'>
 	{{ form_label(agregarCapitulo.capi_detalle) }}
 	<div {{ block('widget_container_attributes') }} class="col-sm-10" >
 	{{ form_widget(agregarCapitulo.capi_detalle,{'attr': {'class':'form-control '},'id':'detalleAgregar' }) }}
 	</div>
 </div>
 
 {{ form_widget(agregarCapitulo.capi_id_original,{'id':'id_originalAgregar'}) }}
 
  {%- block submit_widget_agregarCapit -%}
    <br>
		<div class="ui-dialog-buttonpane ui-widget-content ui-helper-clearfix">
			<div class="ui-dialog-buttonset">
    			<button type="{{ type|default('submit') }}" class="btn ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only"  }}>
     	  		 <span class="ui-button-text">Confirmar</span>
 	   			</button>
 	   		</div>
 	   	</div>
  {%- endblock submit_widget_agregarCapit -%}
 	{{ form_end(agregarCapitulo) }}
 </div> 
 
 {# JURISDICCION #}
 
  {% form_theme editarJurisdiccion _self %}
  <div id="editarJurisdiccionDLG" title="Editar Jurisdicción">
  
  	{{ form_start(editarJurisdiccion) }}
  	{{ form_errors(editarJurisdiccion) }}
  	
  	<div class='form-group'>
  		{{ form_label(editarJurisdiccion.juriDetalle) }}
  		<div {{ block('widget_container_attributes') }} class="col-sm-9">
  			{{ form_widget(editarJurisdiccion.juriDetalle,{'attr': {'class':'form-control'}}) }}
  		</div>
  	</div>
  	
  	
   <div class='form-group'>
  	   {{ form_label(editarJurisdiccion.juriCapitulo) }}
  	   <div {{ block('widget_container_attributes') }} class="col-sm-9" >
    		 {{ form_widget(editarJurisdiccion.juriCapitulo, {'attr': {'class':'form-control ui-selectmenu-button ui-widget ui-state-default ui-corner-all'} }) }}
       </div>
  </div>
  	
  
  {{ form_widget(editarJurisdiccion.juriId) }}
  
  
    {%- block submit_widget_juris -%}
    <br>
		<div class="ui-dialog-buttonpane ui-widget-content ui-helper-clearfix">
			<div class="ui-dialog-buttonset">
    			<button type="{{ type|default('submit') }}" class="btn ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only"  }}>
     	  		 <span class="ui-button-text">Confirmar</span>
 	   			</button>
 	   			
 	   			<button id="eliminarJuris" class="btn ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only"  }}>
     	  		 <span class="ui-button-text">Eliminar</span>
 	   			</button>
 	   			
 	   			
 	   			<button id="cancelarJuris" class="btn ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only"  }}>
     	  		 <span class="ui-button-text">Cancelar</span>
 	   			</button>
 	   		</div>
 	   	</div>
    {%- endblock submit_widget_juris -%}
 	{{ form_end(editarJurisdiccion) }}
  
  
  
  </div>

 {% endblock %}

 
 
 
 
 
 
 
	
	
{% endblock %}

{% block javascript %}
  <script type="text/javascript">

  $(function() {
	$("ui.tooltip").siblings(".tooltip").remove();
	$( document ).tooltip();
	});
	$( document ).ready(function() {
		var adminObject = new Admin();
		adminObject.init();
		adminObject.habilitacionAnio = "{{ path("_habilitacionAnio") }}";
		adminObject.getTabla = "{{ path("_getTabla") }}";
		adminObject.eliminarAnio = "{{ path("_eliminarAnio") }}";
		adminObject.eliminarCapitulo = "{{ path("_eliminarCapitulo") }}";
		adminObject.formAnio =  "{{ agregarAnio.vars.full_name }}";


		
	});
  </script>
  
{% endblock %}